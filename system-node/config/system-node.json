{
  "id": "19291",
  "name": "System Node 1",
  "description": "First hydroponics setup",
  "system": {
    "mqtt": {
      "gateway": {
        "uri": "mqtt://192.168.1.18",
        "username": "",
        "password": ""
      },
      "options": {
        "qos": 2
      },
      "topics": {
        "subscriptions": [
          "system-node/{id}/action",
          "system-node/{id}/action/relay",
          "system-node/{id}/status",
          "system-node/{id}/ping"
        ],
        "publish": {
          "register": "node/register",
          "status": "node/status",
          "event-status": "node/event/status"
        }
      }
    }
  },
  "node": {
    "id": "19291",
    "name": "System Node 1",
    "description": "First hydroponics setup",
    "components": {
      "relays" : [
        {
          "id": "1234",
          "type": "relay",
          "pin": 12,
          "state": "off",
          "alias": "Light 1"
        },
        {
          "id": "1235",
          "type": "relay",
          "pin": 16,
          "state": "off",
          "alias": "Light 2"
        },
        {
          "id": "1236",
          "type": "relay",
          "pin": 20,
          "state": "off",
          "alias": "Fan"
        },
        {
          "id" : "1237",
          "type": "relay",
          "pin": 21,
          "state": "off",
          "alias": "Nutrient Pump"
        }
      ],
      "sensors": [
        {
          "id": "1236",
          "type": "temperature/humidity",
          "model": "DHT22",
          "pin": 19,
          "alias": "Lower Shelf DHT22",
          "preferences": {
            "scale": "fahrenheit",
            "threshold": 60,
            "interval": 5000
          }
        },
        {
          "id": "1237",
          "type": "temperature/humidity",
          "model": "DHT22",
          "pin": 26,
          "alias": "Upper Shelf DHT22",
          "preferences": {
            "scale": "fahrenheit",
            "threshold": 60,
            "interval": 2000
          }
        }
      ]
    }
  }
}
